@model Zika.Models.Email

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Edit Emails</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.EmailId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmailId"/>
            <div class="form-group">
                <label asp-for="UserEmails" class="control-label"></label>
                <textarea asp-for="UserEmails" class="form-control"></textarea>
                <span asp-validation-for="UserEmails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

