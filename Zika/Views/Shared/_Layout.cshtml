<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zika Express Logistics</title>

    @*<environment include="Development">*@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    @*</environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>*@
</head>
<body>
    
    <div class="navbar-fixed-top">
        <nav class="navbar navbar-inverse z-color">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/images/finalzel.png" alt="Logo Identity" class="img-responsive logo-img"/></a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a asp-area="" asp-controller="Home" asp-action="RequestFreight">Track Freight</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                        @await Html.PartialAsync("_LoginPartial")

                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Menu <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="glyphicon glyphicon-home"></i> Home</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Exchange"><i class="glyphicon glyphicon-credit-card"></i> Exchange Rate and Pricing</a></li>
                                <li><a asp-area="" asp-controller="Freights" asp-action="Create"><i class="glyphicon glyphicon-plane"></i> Request Freight</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Team"><i class="glyphicon glyphicon-user"></i> Meet The Team</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="FAQ"><i class="glyphicon glyphicon-question-sign"></i> FAQs</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Contact"><i class="glyphicon glyphicon-phone"></i> Our Office/Contact Us</a></li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </div>
    <div class="row z-no-margin-both z-ve-margin-10">
        <div class=" z-min-height">
            @RenderBody()
        </div>
        

            <div id="footer">
                <div class="container">
                    <div class="row z-no-margin-both">

                        <div class="col-sm-3">
                            <div class="foot-header">
                                Information
                            </div>
                            <div class="foot-links">
                                <a asp-action="Terms" asp-controller="Home">Terms & Conditions</a>
                                <a asp-action="Privacy" asp-controller="Home">Privacy Policy</a>
                                <a asp-action="Disclaimer" asp-controller="Home">Disclaimer</a>
                             
                            </div>
                        </div><!--/col-sm-3-->
                        <div class="col-sm-3">
                            <div class="foot-header"> Open Hours</div>
                            <div class="foot-links">
                                <p>
                                    Mon-Fri: 9am - 5pm <br />
                                    Saturday: Closed <br />
                                    Sunday: Closed <br />

                                    

                                </p>
                                <p>
                                    <span>@DateTime.Now.ToLongDateString()@DateTime.Now.ToShortTimeString()</span><br/><br/>
                                    <span><a href="tel:+2348135016503">+234 813 5016 503</a></span>
                                    <span><a href="mailto:info@zikaexpresslogistics.com">info@zikaexpresslogistics.com</a></span>

                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="foot-header">
                                Supported Payments
                            </div>
                            <div class="foot-links">

                                <p>
                                    <strong>Bank Payment</strong><br />
                                    Bank: Zenith Bank<br />
                                    Account Number: 1016194798<br />
                                    Account Name: Zika Express Logistics
                                </p>
                                <p>
                                    <img src="~/images/paystack.png" alt="PayStack Logo" title="PayStack" class="img-responsive">
                                    <img src="~/images/flutter.png" alt="FlutterWave Logo" title="FlutterWave" class="img-responsive">
                                    <img src="~/images/mobile.png" alt="Mobile Money Logo" title="Mobile Money" class="img-responsive">
                                </p>
                                
                            </div>
                                        
                                   
                        </div>
                        

                    </div><!--/row-->
                    <hr class="z-hr-footer"/>
                        <div class="row" id="final-footer">
                            
                            <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                                &copy; @DateTime.Now.Year - Zika Express Logistics
                            </div>
                            
                    </div><!--/container-->
                </div><!--/footer-->
            </div>


            <div id="push"></div>
            
      
    </div>
        

    @*<environment include="Development">*@
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    @*</environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>*@
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
